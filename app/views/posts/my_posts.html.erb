<main role="main">
  <div class="album py-5">
    <div class="container">

      <%= render partial: "shared/flash" %>
      <h3 class="mb-2">Saját posztjaim</h3>
      <div class="row">

        <div class="col-md-12">
          <table class="table table-striped table-bordered">
            <tr>
              <th>
                Kedvenc neve
              </th>
              <th>
                Kedvenc kora
              </th>
              <th>
                Kedvenc fajtája
              </th>
              <th>
                Kedvenc leírása
              </th>
              <th>
                Műveletek
              </th>
            </tr>

            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= post.petname %>
                </td>
                <td>
                  <%= post.age %>
                </td>
                <td>
                  <%= post.species %>
                </td>
                <td>
                  <%= post.description %>
                </td>
                <td>
                  <%= link_to "Megnézem", post_path(post.id) %>
                  <%= link_to "Szerkesztés", edit_post_path(post.id) %>
                  <%= button_to "Törlés", post_path(post.id), method: :delete, class: "btn btn-link p-0 m-0" %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>

</main>

