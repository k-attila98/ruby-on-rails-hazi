
    <%= form_with model: @post do |form| %>

      <%= render partial: "shared/flash" %>

      <div class="mb-3">
        <%= form.label :petname, "Kedvenc neve" %>
        <%= form.text_field :petname, class: "form-control", placeholder: "Név", :required => true %>
      </div>

      <div class="mb-3">
        <%= form.label :age, "Kedvenc kora" %>
        <%= form.text_field :age, class: "form-control", placeholder: "Kor", :required => true %>
      </div>

      <div class="mb-3">
        <%= form.label :species, "Kedvenc fajtája" %>
        <%= form.text_field :species, class: "form-control", placeholder: "Kaméleon, border collie, stb.", :required => true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, "Leírás" %>
        <%= form.text_field :description, class: "form-control", placeholder: "Bármi ami eszedbe jut az állatkádról...", :required => true %>
      </div>


      <div class="mb-3">
        <%= form.label :image, "Kép" %>
        <%= form.file_field :image, :required => true %>
      </div>

      <div class="mb-3">
        <%= form.submit "Beküldöm!", class: "btn btn-primary" %>
        <%= link_to "Mégse", root_path, :class => "btn btn-link", :required => true %>
      </div>

    <% end %>