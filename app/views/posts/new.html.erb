<div class="row m-0">
  <div class="container col-md-3 pt-5">

    <%= form_with model: @post, url: new_post_path do |form| %>

      <h1 class="h3 mb-3 font-weight-normal">Új poszt létrehozása</h1>

      <%= render partial: "shared/flash" %>

      <div class="mb-3">
        <%= form.label :petname, "Kedvenc neve" %>
        <%= form.text_field :petname, class: "form-control", placeholder: "Név" %>
      </div>

      <div class="mb-3">
        <%= form.label :age, "Kedvenc kora" %>
        <%= form.text_field :age, class: "form-control", placeholder: "Kor" %>
      </div>

      <div class="mb-3">
        <%= form.label :species, "Kedvenc fajtája" %>
        <%= form.text_field :species, class: "form-control", placeholder: "Kaméleon, border collie, stb." %>
      </div>

      <div class="mb-3">
        <%= form.label :description, "Leírás" %>
        <%= form.text_field :description, class: "form-control", placeholder: "Bármi ami eszedbe jut az állatkádról..." %>
      </div>

      <div class="mb-3">
        <%= form.submit "Beküldöm!", class: "btn btn-primary" %>
        <%= link_to "Mégse", root_path, :class => "btn btn-link" %>
      </div>

    <% end %>

  </div>
</div>