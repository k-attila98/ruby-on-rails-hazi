<main role="main">
  <div class="container">
    <div class="m-4">
      <h2>Profil</h2>
      <table class="table table-striped">
        <tbody>
          <tr>
            <th scope="row">Gazda neve:</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row">Gazda email címe:</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "Profil szerkesztése", profile_edit_path(session[:user_id]), :class => "btn btn-outline-primary" %>
    </div>
  </div>
</main>
